<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSnackbar?>
<?import java.lang.String?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootElement" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <left>
      <VBox fx:id="sideMenu" styleClass="side-menu" stylesheets="@styles.css" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="menuButton1" contentDisplay="CENTER" onAction="#menuAction1" stylesheets="@styles.css" text="Menu Item 1">
               <styleClass>
                  <String fx:value="side-menu" />
                  <String fx:value="menu-item" />
               </styleClass></JFXButton>
            <JFXButton contentDisplay="CENTER" onAction="#menuAction2" stylesheets="@styles.css" text="Menu Item 2">
               <styleClass>
                  <String fx:value="side-menu" />
                  <String fx:value="menu-item" />
               </styleClass></JFXButton>
            <JFXButton contentDisplay="CENTER" onAction="#menuAction3" stylesheets="@styles.css" text="Menu Item 3">
               <styleClass>
                  <String fx:value="side-menu" />
                  <String fx:value="menu-item" />
               </styleClass></JFXButton>
         </children></VBox>
   </left>
   <center>
      <BorderPane prefHeight="300.0" prefWidth="400.0" styleClass="main-pane" stylesheets="@styles.css" BorderPane.alignment="CENTER">
         <bottom>
            <VBox prefHeight="30.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXSnackbar fx:id="snackbar" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
